{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "baseUrl": ".",
        "outDir": "dist",
        "esModuleInterop": true,
        "strict": true,
        "emitDecoratorMetadata":true,
        "experimentalDecorators":true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "sourceMap": true,
    },
    "include": ["./src/**/*"],
    "exclude": [
        "node_modules",
    ]
}