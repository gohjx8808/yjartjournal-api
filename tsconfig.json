{
    "compilerOptions": {
        "lib": [
            "esnext"
        ],
        "module": "CommonJS",
        "target": "esnext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "outDir": "dist",
        "paths": {
            "*": [
                "./node_modules/*",
                "./src/types/*"
            ]
        }
    },
}